{
  "manifest_version": 2,

  "name": "GitHub Notifier",
  "version": "0.0.1",
  "description": "Displays when you have unread GitHub notifications.",
  "homepage_url": "https://github.com/whylom/github-notifier",
  "permissions": [
    "tabs",
    "https://github.com/*"
  ],

  "icons": {
    "19": "icons/19.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "browser_action": {
    "default_icon": "icons/19.png",
    "default_title": "GitHub Notifier"
  },

  "background": {
    "persistent": true,
    "scripts": [
      "js/jquery.js",
      "js/github.js",
      "js/icon.js",
      "background.js"
    ]
  },

  "options_page": "options/options.html"
}
